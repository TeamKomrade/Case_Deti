@model UserModel
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Main.css">
    <meta charset="UTF-8">
    <title>ХакаЧто?</title>
    <script src="~/js/scripts.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body onload="selectMenu()">
<img src="~/Images/текстура бумаги 17 проц.jpg" height="auto" width="auto" class="texture">
<div class="profile">
    <div class="user_profile">
        <div class="info">
            <div id="lvl">
                13
            </div>
            <div id="user_name">
                @Model.FirstName
            </div>
        </div>
        <div class="user_image"></div>
        <div class="latest_achievements_title">
            Последние Достижения
        </div>
        <div class="latest_achievements">
            @foreach (var achievement in Model.Achievements)
            {
            <div class="achievement">
                <div class="achievement_icon">
                    <img src="@achievement.ImgURL" width="80%" height="80%">
                </div>
                <div class="achievement_title">
                    @achievement.Title
                </div>
            </div>
            }
        </div>
    </div>
    <div class="menu">
        <button class="menu_button" value="1" >Мои навыки</button>
        <button class="menu_button" value="2" >Достижения</button>
        <button class="menu_button" value="3">Мои курсы</button>
        <button class="menu_button"value="4">Успеваемость</button>
        <button class="menu_button" value="5" >Рейтинг</button>
    </div>
    <div class="achievement_list">
        <button class="menu_back">
            <img src="~/Images/back-arrow.png" width="75%" height="75%" id="arrow_color">
        </button>
        <div class="achievement">
            <div class="achievement_icon">
                <img src="~/Images/kot.png" width="80%" height="80%">
            </div>
            <div class="achievement_text">
                <div class="achievement_title">
                    Своего рода БД
                </div>
                <div class="achievement_description">
                    Создать первую базу
                </div>
            </div>
        </div>
        <div class="achievement">
            <div class="achievement_icon">
                <img src="~/Images/kot.png" width="80%" height="80%">
            </div>
            <div class="achievement_text">
                <div class="achievement_title">
                    Мама, я попал на IT
                </div>
                <div class="achievement_description">
                    Основы IT-технологий
                </div>
            </div>
        </div>
        <div class="achievement">
            <div class="achievement_icon">
                <img src="~/Images/kot.png" width="80%" height="80%">
            </div>
            <div class="achievement_text">
                <div class="achievement_title">
                    Белый хакер
                </div>
                <div class="achievement_description">
                    Основы кибербезопасности
                </div>
            </div>
        </div>
        <div class="achievement">
            <div class="achievement_icon">
                <img src="~/Images/kot.png" width="80%" height="80%">
            </div>
            <div class="achievement_text">
                <div class="achievement_title">
                    Бэкэнд я тебе дам
                </div>
                <div class="achievement_description">
                    Разработать первый бэк
                </div>
            </div>
        </div>
        <div class="achievement">
            <div class="achievement_icon">
                <img src="~/Images/kot.png" width="80%" height="80%">
            </div>
            <div class="achievement_text">
                <div class="achievement_title">
                    Фронтенд не дам
                </div>
                <div class="achievement_description">
                    Разработать первый фронт
                </div>
            </div>
        </div>
    </div>
    <div class="skills_list">
        <button class="menu_back">
            <img src="~/Images/back-arrow.png" width="75%" height="75%" id="arrow_color">
        </button>
        <div class="skill_item">Создание SQL БД</div>
        <div class="skill_item">Разработка дизайна</div>
        <div class="skill_item">Программирование на C#</div>
        <div class="skill_item">Администрирование БД</div>
        <div class="skill_item">Защита данных</div>
    </div>
    <div class="vector">
        <button class="menu_back">
            <img src="~/Images/back-arrow.png" width="75%" height="75%" id="arrow_color">
        </button>
        <button class="vector_item" onclick="redirectPage('/../../Home/Courses')">
            <div class="vector_item_title">
                "3D моделирование"
            </div>
            <div class="vector_item_saved">
                Сохранено: 12.06.20
            </div>
        </button>
        <button class="vector_item" disabled>Пустой слот</button>
        <button class="vector_item" disabled>Пустой слот</button>
        <button class="search_vector" onclick="redirectPage('/../../Home/Index')">Найти вектор</button>
    </div>
</div>
</body>
</html>