@model RegisterModel 

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Main.css">
    <meta charset="UTF-8">
    <title>ХакаЧто?</title>
    <script src="~/js/signscript.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"> </script>
</head>
<body onload="startDirecting()">

<img src="~/Images/текстура бумаги 17 проц.jpg" height="auto" width="auto" class="texture">
<div class="sign_in_up">
    <div class="sign_in">
        <div class="tab_buttons">
            <button  class="sign_button" onclick="UpdateReg()">РЕГИСТРАЦИЯ</button>
            <button  class="sign_button" disabled>ВХОД</button>
        </div>
        <div class="input_fields">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
                <table>
                    <tr>
                        <td><label class="field" asp-for="Login"></label></td>
                        <td><input class="enter_area" asp-for="Login"></td>
                        <td><span asp-validation-for="Login" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label class="field" asp-for="Password"></label></td>
                        <td><input class="enter_area" asp-for="Password"></td>
                        <td><span asp-validation-for="Password" class="text-danger"></span></td>
                    </tr>
                </table>
                <button class="login_button" type="submit">Вход</button>
            </form>
        </div>
    </div>
    <div class="sign_up">
        <div class="tab_buttons">
            <button class="sign_button" disabled>РЕГИСТРАЦИЯ</button>
            <button class="sign_button" onclick="UpdateLogin()">ВХОД</button>
        </div>
        <div class="input_fields">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
                <table>
                    <tr>
                        <td><label class="field" asp-for="Login"></label></td>
                        <td><input class="enter_area" asp-for="Login"></td>
                        <td><span asp-validation-for="Login" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label class="field" asp-for="Password"></label></td>
                        <td><input class="enter_area" asp-for="Password"></td>
                        <td><span asp-validation-for="Password" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label class="field" asp-for="FirstName"></label></td>
                        <td><input class="enter_area" asp-for="FirstName"></td>
                        <td><span asp-validation-for="FirstName" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label class="field" asp-for="LastName"></label></td>
                        <td><input class="enter_area" asp-for="LastName"></td>
                        <td><span asp-validation-for="LastName" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label class="field" asp-for="MiddleName"></label></td>
                        <td><input class="enter_area" asp-for="MiddleName"></td>
                        <td><span asp-validation-for="MiddleName" class="text-danger"></span></td>
                    </tr>
                    <tr>
                        <td><label class="field" asp-for="Age"></label></td>
                        <td><input class="enter_area" asp-for="Age"></td>
                        <td><span asp-validation-for="Age" class="text-danger"></span></td>
                    </tr>
                </table>
                <button class="login_button" type="submit">Регистрация</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>